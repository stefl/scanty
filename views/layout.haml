%html{:dir => "ltr", :lang => "en-US", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head{:profile => "http://gmpg.org/xfn/11"}
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{:content => "index,follow", :name => "robots"}/
    
    %title= @title || Blog.title
    %link{:href => "http://steflewandowski.com/wp-content/themes/sugar_cane/style.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://disqus.com/stylesheets/stef/disqus.css?v=2.0", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => Blog.url_base, :rel => "index", :title => Blog.title}/
    %script{:charset => "utf-8", :src => "/jquery.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/application.js", :type => "text/javascript"}
    :css
      .entry-content { margin-left:5em !important; width: 550px !important; }
  %body
    #wrapper.hfeed.sinatra.ruby.loggedin
      %section#header
        #branding
          #blog-title
            %span
              %a{:href => Blog.url, :rel => "home", :title => Blog.title }= Blog.title
          #blog-description= Blog.description
        #access
          .skip-link
            %a{:href => "#content", :title => "Skip navigation to the content"} Skip to content
    
      %section#main
        #container
          #content
            #nav-above.navigation
            = yield
        = haml :sidebar, :layout=>false
      %section#footer
        %p
          \&copy; 2010 |
          Content by
          %a{:href => "http://www.verysuperfluo.us"}= Blog.author
          |
          Powered by
          %a{:href => "http://www.github.com/marksands/scanty"} scanty
          |
          Design adapted from
          %a{:href => "http://www.freecsstemplates.org/preview/replenish"} Replenish
          and modified by me |
          Awesomely hosted by
          %a{:href => "http://heroku.com/"} heroku
      :javascript
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      :javascript
        try {
        	var pageTracker = _gat._getTracker("UA-10087921-1");
        	pageTracker._trackPageview();
        }
        catch(err) { }
