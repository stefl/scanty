%form{:action => url, :method => "post", :name => "new"}
  .postzoom
    %h2.title
      %input{:name => "title", :title => "Title", :type => "text", :value => post.title}/
    %p.meta
      %input{:name => "tags", :title => "Tags", :type => "text", :value => post.tags}/
    %p.meta= post.published_at
    .entry
      %textarea{:name => "body"}= post.body
    .edit
      %input{:type => "submit", :value => "Save"}/
- if admin?
  #new_post
    %a{:href => "/posts/new"} New post
